<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
     <item android:state_pressed="true" >
         <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />
           <stroke android:color="#CC0000" android:width="0dp"/>
             <gradient  android:angle="-90"  android:startColor="#A3FFA3" android:endColor="#66FF66"  />
         </shape>
     </item>
    <item android:state_focused="true">
         <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />
              <stroke android:color="#000" android:width="0dp"/>
             <solid  android:color="#e0341e"/>      
         </shape>
     </item>
      <item android:state_pressed="false" 
          android:state_enabled="false">
         	 <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />
                <stroke android:color="#FFFFFF" android:width="0dp"/>
             <solid  android:color="#94FF94"/>
         </shape>
      </item> 
    <item  android:state_enabled="true">
        <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />
                <stroke android:color="#FFFFFF" android:width="0dp"/>
             <gradient  android:angle="-90"  android:startColor="#D1FFD1" android:endColor="#85FF85" />
         </shape>
     </item>
</selector>